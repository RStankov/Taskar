<div id="section_title">
  <h1><%=t :'sections.new_section' %></h1>
</div>
<% form_for [@project, @section], :html => {:id => nil} do |f| %>
  <%= f.error_messages %>
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true %>
  <%= f.hidden_field :insert_before, :value => params[:insert_before] if params[:insert_before] %>
  <%= f.submit t(:create) %>
<% end %>