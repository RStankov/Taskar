<div id="section_title">
  <h1>New Section</h1>
</div>
<% form_for [@project, @section], :html => {:id => nil} do |f| %>
  <%= f.error_messages %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= hidden_field_tag 'before', '', :id => nil, :value => params[:before] if params[:before] %>
  <%= f.submit 'Create' %>
<% end %>