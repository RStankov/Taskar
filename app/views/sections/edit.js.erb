<% javascript_response do %>
	(function(){
		$('section_title').slideUp({
			after: function(e){
				e.element.update("<%= raw escape_javascript(render "form", :section => @section, :remote => true) %>").slideDown();
			}
		});
		var text = $('section_text');
    text && text.removeWithEffect('slideUp');
	})();
<% end %>