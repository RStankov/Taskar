<%= javascript_response do %>
	(function(element){
		element.morph({
			change: function(){
				element.update(<%= javascript_string_from_partial "title" %>);
			}
		});
		<% unless @section.text.blank? %>
			element.insert({
				after: new Element("p", {className: "text", id: "section_text"})
								.update("<%= raw escape_javascript(nl2br(auto_link(@section.text))) %>")
								.hide()
								.slideDown()
			});
		<% end %>
	})($("section_title"));
<% end %>