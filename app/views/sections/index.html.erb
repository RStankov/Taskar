<h1>Listing sections</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Name</th>
    <th>Position</th>
  </tr>

<% @sections.each do |section| %>
  <tr>
    <td><%=h section.project %></td>
    <td><%=h section.name %></td>
    <td><%=h section.position %></td>
    <td><%= link_to 'Show', [@project, section] %></td>
    <td><%= link_to 'Edit', [:edit, @project, section] %></td>
    <td><%= link_to 'Destroy', [@project, section], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New section', [:new, @project, :section] %>