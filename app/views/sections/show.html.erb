<% if @section.archived? %>
  <header id="section_title">
    <h1 class="archived">
      <%=h @section.name %>
      <%= link_to "", archive_section_path(@section, :archive => false), :class => "unarchive", :'data-method' => 'put' %>
      <%= link_to_delete t(:delete), @section, :class => "delete", :confirm => t(:'.confirm') %>
    </h1>
  </header>
  <ul class="tasks_list static">
    <% @tasks.each do |task| %>
      <% content_tag_for(:li, task, :class => task.state + (current_user.id == task.responsible_party_id ? ' personal' : '')) do %>
				<div class="tooltip">
					<div class="arrow"></div>
					<div class="actions">
						<a href="#" class="add" data-after="<%= task.id %>"><%= t 'sections.show.add_task' %></a>
						<%= link_to t(:'tasks.task.comments', :count => task.comments.size), task %>
						<%= link_to t(:delete), task, :class => "delete", "data-remote" => true, "data-method" => "delete", "data-confirm" => t(:'.confirm') %>
					</div>
				</div>
			  <%= task_state_checkbox(task) %>
			  <p>
			    <% if task.responsible_party %><strong><%= task.responsible_party.full_name %></strong><% end %>
			    <%=h task.text %>
			  </p>
				<%= content_tag :span, t('tasks.task.more'), :class => 'more', 'data-more' => t('tasks.task.more'), 'data-less' => t('tasks.task.less') %>
			<% end %>
    <% end %>
  </ul>
  <ul id="section_footer">
		<li id="more_actions">
      <span><%=t :'.more' %></span>
      <ul>
				<li><%= link_to t('.print'), section_path(@section, :format => 'print') %></li>
      </ul>
    </li>
  </ul>
<% else %>
  <header id="section_title">
    <h1>
      <%=h @section.name %>
      <%= link_to "", archive_section_path(@section, :archive => true), :class => "archive", :'data-method' => 'put' %>
      <%= link_to t(:edit), [:edit, @section], :class => "edit" %>
      <%= link_to_delete t(:delete), @section, :class => "delete", :confirm => t(:'.confirm') %>
    </h1>
    <% form_for @section, :html => {:style => "display:none;"} do |form| %>
      <%= form.text_field :name, :placeholder => Section.human_attribute_name(:name) %>
      <%= form.submit t(:update) %>
      <input type="button" value="<%=t :cancel %>" />
    <% end %>
  </header>
  <ul id="tasks" class="tasks_list" data-sortable="<%= reorder_project_tasks_path(@section.project, @section)  %>">
    <%= render @tasks %>
    <%= render "tasks/new_task" %>
  </ul>
  <ul id="section_footer">
    <li><input type="button" value="<%=t :'.add_task' %>" class="add"></li>
    <li><input type="button" value="<%=t :'.toggle_archive' %>" class="toggle_archived" data-url="<%= archived_section_tasks_path(@section) %>"></li>
    <li id="more_actions">
      <span><%=t :'.more' %></span>
      <ul>
				<li><%= link_to t('.print'), section_path(@section, :format => 'print') %></li>
      </ul>
    </li>
  </ul>
<% end %>