<div id="section_title">
  <h1>
    <%=h @section.name %>
    <%= link_to t(:edit), [:edit, @section], :class => "edit" %>
    <%= link_to_delete t(:delete), @section, :class => "delete", :confirm => t(:'.confirm') %>
  </h1>
  <% form_for @section, :html => {:style => "display:none;"} do |form| %>
    <%= form.text_field :name, :placeholder => Section.human_attribute_name(:name) %>
    <%= form.submit t(:update) %>
    <input type="button" value="<%=t :cancel %>" />
  <% end %>
</div>
<ul id="tasks" data-sortable="<%= reorder_tasks_path(@section)  %>">
  <%= render @section.tasks.unarchived %>
  <%= render "tasks/new_form" %>
</ul>
<ul id="section_footer">
  <li><input type="button" value="<%=t :'.add_task' %>" id="add_task_button"></li>
  <li><input type="button" value="<%=t :'.toggle_tasks' %>"></li>
  <li id="more_actions">
    <span><%=t :'.more' %></span>
    <ul>
      <li><a href="#">RSS</a></li>
      <li><span>Print</span></li>
      <li><a href="#">Export</a></li>
      <li><a href="#">Import</a></li>
    </ul>
  </li>
</ul>