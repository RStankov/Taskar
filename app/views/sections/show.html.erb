<% if @section.archived? %>
  <header id="section_title">
    <h1 class="archived">
      <%=h @section.name %>
      <%= link_to "", archive_section_path(@section, :archive => false), :class => "unarchive", :'data-method' => 'put' %>
      <%= link_to_delete t(:delete), @section, :class => "delete", :confirm => t(:'.confirm') %>
    </h1>
  </header>
  <ul class="tasks_list static">
    <% @tasks.each do |task| %>
      <%= render "tasks/archived", :task => task %>
    <% end %>
  </ul>
  <ul id="section_footer">
    <li><%= link_to t('.print'), section_path(@section, :format => 'print'), :target => "_blank" %></li>
  </ul>
<% else %>
  <header id="section_title">
    <h1>
      <%=h @section.name %>
      <%= link_to "", archive_section_path(@section, :archive => true), :class => "archive", :'data-method' => 'put' %>
      <%= link_to t(:edit), [:edit, @section], :class => "edit" %>
      <%= link_to_delete t(:delete), @section, :class => "delete", :confirm => t(:'.confirm') %>
    </h1>
    <% form_for @section, :html => {:style => "display:none;"} do |form| %>
      <%= form.text_field :name, :placeholder => Section.human_attribute_name(:name) %>
      <%= form.submit t(:update) %>
      <input type="button" value="<%=t :cancel %>" />
    <% end %>
  </header>
  <ul id="tasks" class="tasks_list" data-sortable="<%= reorder_project_tasks_path(@section.project, @section)  %>">
    <%= render @tasks %>
    <%= render "tasks/new_task" %>
  </ul>
  <ul id="section_footer">
    <li><a href="#" class="add"><%=t :'.add_task' %></a></li>
    <li>
        <a href="#" class="toggle_archived" data-url="<%= archived_section_tasks_path(@section) %>">
          <span><%=t :'.toggle_archive' %></span>
        </a>
    </li>
    <li><%= link_to t('.print'), section_path(@section, :format => 'print'), :target => "_blank" %></li>
  </ul>
<% end %>