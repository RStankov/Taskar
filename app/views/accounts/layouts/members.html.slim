- title 'Members'

- content_for :content do
  .listing
    h2 Users (#{@account.users.size}):

    = link_to '+', new_account_invitation_path(@account), :class => 'new', :title => 'Invite user'

    = render :partial => 'members/member', :collection => AccountMember.for(@account)

  article
    = yield

= render :template => 'layouts/accounts'
