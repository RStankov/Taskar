<div id="user_box">
  <header>
	  <%= legacy_title "devise.passwords.change_title" %>
  </header>
	<%= form_for @user, :url => password_path(resource_name), :html => { :method => :put, :class => "action_form" } do |f| %>
	  <%= render "shared/error_messages", :target => f.object %>
	  <%= f.hidden_field :reset_password_token %>
	  <%= f.label :password %>
	  <%= f.password_field :password %>
	  <%= f.label :password_confirmation %>
	  <%= f.password_field :password_confirmation %>
	  <%= f.submit t("devise.passwords.update_button") %>
	<% end %>
  <%= render "devise/shared/links" %>
</div>