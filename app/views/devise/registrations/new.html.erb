<div id="user_box">
  <header>
  	<%= title 'devise.registrations.new' %>
  </header>
	<%= form_for @user, :url => registration_path(resource_name), :html => { :class => 'action_form', :multipart => true} do |f| %>
	  <%= render 'shared/error_messages', :target => f.object %>
	  <%= f.label :email %>
	  <%= f.text_field :email %>
	  <%= f.label :password %>
	  <%= f.password_field :password %>
	  <%= f.label :password_confirmation %>
	  <%= f.password_field :password_confirmation %>
	  <%= f.label :first_name  %>
	  <%= f.text_field :first_name  %>
	  <%= f.label :last_name  %>
	  <%= f.text_field :last_name  %>
		<%= f.fields_for :owned_account, @user.owned_account || Account.new do |account| %>
			<%= account.label :name, "Име на фирмата ви" %>
			<%= account.text_field :name %>
		<% end %>
	  <%= f.label :avatar %>
	  <%= f.file_field :avatar %>
		<div class="buttons">
      <%= f.submit t('devise.registrations.register') %>
	  </div>
	<% end %>
  <%= render "devise/shared/links" %>
</div>