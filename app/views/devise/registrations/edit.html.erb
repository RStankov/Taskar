<div id="user_box">
  <header>
  	<%= title 'devise.registrations.profile' %>
  </header>
	<%= form_for @user, :url => registration_path(resource_name), :html => { :class => 'action_form', :method => :put, :multipart => true } do |f| %>
	  <%= render 'shared/error_messages', :target => f.object %>

		<p><strong><%= t 'devise.registrations.confirm_password' %></strong></p>
		<%= f.label :current_password %>
	  <%= f.password_field :current_password %>

	  <%= f.label :email %>
	  <%= f.text_field :email %>

	  <%= f.label :first_name  %>
	  <%= f.text_field :first_name  %>

	  <%= f.label :last_name  %>
	  <%= f.text_field :last_name  %>

    <%= f.label :locale %>
	  <%= f.select :locale, {"Български език" => "bg", "English language" => "en"} %>

	  <%= f.label :avatar %>
	  <%= f.file_field :avatar %>

		<%= f.label :password %>
	  <%= f.password_field :password %>

	  <%= f.label :password_confirmation %>
	  <%= f.password_field :password_confirmation %>

		<div class="buttons">
      <%= f.submit t(:update) %>
	  </div>
	<% end %>
</div>
