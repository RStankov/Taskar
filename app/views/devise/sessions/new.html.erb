<div id="user_box">
	<header>
		<%= title 'sessions.title' %>
	</header>
	<%= form_for @user, :url => session_path(resource_name), :html => { :class => "action_form" } do |f| %>
		<%= raw '<p class="notice">' + notice + '</p>' if notice %>
	  <%= raw '<p class="alert">' + alert + '</p>' if alert %>
		<%= f.label :email %>
	  <%= f.text_field :email %>
	  <%= f.label :password %>
	  <%= f.password_field :password %>
	  <%= f.label :domain, "Domain" %><br />
	  <input type="text" name="domain" id="domain" value="<%= params[:domain] %>" style="width: 200px; display: inline;" />.taskarapp.com<br />
	  <%= f.check_box :remember_me %> <%= f.label :remember_me %>
	  <div class="buttons">
	    <%= f.submit t('devise.sessions.link') %>
	  </div>
	<% end %>
	<%= render "devise/shared/links" %>
</div>