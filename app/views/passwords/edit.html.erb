<header>
	<%= title 'devise.passwords.change_title' %>
</header>
<div class="wrap">
	<% form_for resource_name, resource, :url => password_path(resource_name), :html => { :method => :put, :class => 'action_form' } do |f| %>
	  <%= render 'shared/error_messages', :target => f.object %>
	  <%= f.hidden_field :reset_password_token %>

	  <p><%= f.label :password %></p>
	  <p><%= f.password_field :password %></p>

	  <p><%= f.label :password_confirmation %></p>
	  <p><%= f.password_field :password_confirmation %></p>

	  <p><%= f.submit t('devise.passwords.update_button') %></p>
	<% end %>
</div>
<%= render :partial => "shared/devise_links" %>