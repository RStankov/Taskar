<header>
	<%= title 'devise.passwords.forgot_title' %>
</header>
<div class="wrap">
	<% form_for resource_name, resource, :url => password_path(resource_name), :html => {:class => 'action_form'} do |f| %>
	  <%= render 'shared/error_messages', :target => f.object %>
	  <p><%= f.label :email %></p>
	  <p><%= f.text_field :email %></p>
	  <p><%= f.label :account_id %></p>
	  <p><%= f.select :account_id, [['---------------' , '']] + Account.all.map {|a| [a.name, a.id]} %></p>
	  <p><%= f.submit t('devise.passwords.send_instructions_button') %></p>
	<% end %>
</div>

<%= render :partial => "shared/devise_links" %>