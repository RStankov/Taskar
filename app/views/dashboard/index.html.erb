<header>
  <h1 id="dashboard_title"><%=t :'.header' %></h1>
</header>

<%= raw '<div class="wrap"><p class="notice">' + notice + '</p></div>' if notice %>
<%= raw '<div class="wrap"><p class="alert">' + alert + '</p></div>' if alert %>

<% if @projects.empty? %>
  <div class="help_notice">
    <% if current_user.admin_in_accounts.empty? %>
      <%= raw t('.empty') %>
    <% else %>
	    <% current_user.admin_in_accounts.each do |account| %>
        <h2><%= raw t('.empty_admin', :account_name => account.name) %></h2>
      	<%= link_to t('.add_project'), [:new, account, :project] %> <%= t :or %>
      	<%= link_to t('.add_user'), [:new, account, :invitation] %>
      	<br />
      	<hr />
      	<br />
  	  <% end %>
  	<% end %>
  </div>
<% else %>
	<table id="events" colspan="0" rowspan="0" width="99%">
		<% @projects.each do |project| %>
		  <tr>
	      <th colspan="4"><h2><%= link_to project.name, [project, :sections] %></h2></th>
	    </tr>
	    <% project.events.all(:limit => 10).each do |event| %>
		    <tr>
		      <td><span class="<%= event.type  %>"><%=t "events.subject.#{event.type}" %></span></td>
		      <td class="<%= event.action %>" title="<%= t(:before, :time => time_ago_in_words(event.updated_at)) %>">
		        <% if event.linkable?%>
		          <%= link_to truncate(event.info, :length => 65), event.url_options %>
		        <% else %>
		          <%= truncate(event.info, :length => 65) %>
		        <% end %>
		      </td>
		        <td class="action"><%=t "events.action.#{event.action}" %></td>
		        <td class="user"><%= event.user.full_name %></td>
		    </tr>
			<% end %>
	  <% end %>
	</table>
<% end %>