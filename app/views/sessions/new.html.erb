<div id="login_box">
	<header>
		<%= title 'sessions.title' %>
	</header>
	<% form_for resource_name, resource, :url => session_path(resource_name) do |f| %>
		<%= '<p class="notice">' + notice + '</p>' if notice %>
	  <%= '<p class="alert">' + alert + '</p>' if alert %>
		<%= f.label :email %>
	  <%= f.text_field :email %>
	  <%= f.label :password %>
	  <%= f.password_field :password %>
	  <%= f.label :account_id %>
	  <%= f.select :account_id, [['---------------' , '']] + Account.all.map {|a| [a.name, a.id]} %>
	  <%= f.check_box :remember_me %> <%= f.label :remember_me %>
	  <%= f.submit t('devise.sessions.link'), :class => 'submit_button' %>
	<% end %>	
	<%= render :partial => "shared/devise_links" %>
</div>