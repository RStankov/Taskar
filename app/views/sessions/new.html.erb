<div id="login_box">
	<header>
		<h1><%= t 'sessions.title' %></h1>
	</header>
	<% form_for resource_name, resource, :url => session_path(resource_name) do |f| %>
		<%= '<p class="notice">' + notice + '</p>' if notice %>
	  <%= '<p class="alert">' + alert + '</p>' if alert %>
		<p><%= f.label :email %></p>
	  <p><%= f.text_field :email %></p>
	  <p><%= f.label :password %></p>
	  <p><%= f.password_field :password %></p>
	  <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
	  <p>
			<%= f.submit t('devise.sessions.link') %>
			<%= t :or %> 
			<%= link_to t('devise.passwords.link'), new_password_path(resource_name) %></p>
		</p>
		<div>
			<%= link_to t('devise.registrations.link'), new_registration_path(resource_name) %>
		</div>		
	<% end %>
</div>