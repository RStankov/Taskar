<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>
  <title><%= @account.name + t(".title_#{controller_name}", :default => "") %></title>
  <%= stylesheet_link_tag 'application' %>
	<%= favicon_link_tag "favicon.png" %>
</head>
<body>
  <%= render "shared/header" %>
  <section>
    <article>
      <%= yield %>
    </article>
    <aside>
			<section>
        <h3><%=t :'.users', :count => @account.users.size %></h3>
        <ul>
          <li><%= link_to t(:'.new_user'), [:new, @account, :user] %></li>
          <li><%= link_to t(:'.manage_users'), [@account, :users] %></li>
        </ul>
      </section>
      <section>
        <% @projects ||= @account.projects.active %>
        <h3><%=t :".current_projects", :count => @projects.size  %></h3>
        <ul>
          <% @projects.each do |project| %>
          <li><%= link_to project.name, project %></li>
          <% end %>
        </ul>
				<%= link_to t(:'.new_project'), new_project_path %><br />
				<%= link_to t(:'.manage_projects'), projects_path %>
      </section>
    </aside>
  </section>
  <%= render "shared/footer" %>
	<div id="info_bubble" style="display:none;"><%=raw t("tasks.move_into_section") %></div>
	<%= sprockets_include_tag %>
</body>
</html>
