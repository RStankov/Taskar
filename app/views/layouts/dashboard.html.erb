<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>
  <title><%= current_user.full_name %>: <%=t :'.title' %></title>
  <%= stylesheet_link_tag 'application' %>
	<%= favicon_link_tag "favicon.png" %>
</head>
<body>
  <%= header do %>
    <% if current_user.admin_in_accounts.size == 1 %>
      <% account = current_user.admin_in_accounts.first %>
      <h2><%= account.name  %></h2>
      <nav id="nav_project">
        <span>
          <%= link_to t("layouts.dashboard.title"), :root, :class => controller_name == "dashboard" && "selected" %>
          <% if account.admin?(current_user) %>
            <%= link_to t("users.title"), [account, :users], :class => controller_name == "users" && "selected" %>
            <%= link_to t("projects.index"), [account, :projects], :class => controller_name == "projects" && "selected" %>
          <% end %>
        </span>
      </nav>
    <% elsif current_user.admin_in_accounts.size > 1 %>
      <h2><%= current_user.full_name %>
        <%= render "shared/accounts" %>
      </h2>
    <% elsif current_user.accounts.size == 1 %>
      <h2><%= current_user.accounts.first.name %></h2>
    <% end %>
  <% end %>
  <section>
    <article>
      <%= yield %>
    </article>
    <aside>
      <% if @projects.size > 0 %>
        <section>
          <h3><%=t :".current_projects", :count => @projects.size  %></h3>
          <ul>
            <% account_id = nil%>
            <% @projects.each do |project| %>
            <% unless account_id == project.account_id  %>
              <% account_id = project.account_id %>
              <li class="title"><%= project.account.name  %></li>
            <% end %>
            <li><strong><%= link_to project.name, [project, :sections] %></strong></li>
            <% end %>
          </ul>
        </section>
      <% end %>
    </aside>
  </section>
  <%= render "shared/footer" %>
	<%= sprockets_include_tag %>
</body>
</html>
