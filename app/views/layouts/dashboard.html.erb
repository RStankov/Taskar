<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>
  <title><%= account.name %>: <%=t :'.title' %></title>
  <%= stylesheet_link_tag 'application' %>
	<link rel="shortcut icon" href="<%= path_to_image 'favicon.png' %>" type="image/x-icon" />
</head>
<body>
  <%= render "shared/header" %>
  <section>
    <article>
      <%= yield %>
    </article>
    <aside>
      <% if current_user.admin? %>
      <section>
        <h3><%=t :".manage"  %></h3>
        <ul>
          <li><%= link_to t(:'users.title'), users_path %></li>
          <li><%= link_to t(:'projects.index.title'), projects_path %></li>
        </ul>
      </section>
      <% end %>
      <section>
        <h3><%=t :".current_projects", :count => @projects.size  %></h3>
        <ul>
          <% @projects.each do |project| %>
          <li>
              <strong><%= link_to h(project.name), [project, :sections] %></strong>
          </li>
          <% end %>
        </ul>
      </section>
    </aside>
  </section>
  <%= render "shared/footer" %>
	<%= sprockets_include_tag %>
</body>
</html>
