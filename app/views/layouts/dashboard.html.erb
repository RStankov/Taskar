<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>
  <title><%= account.name %>: <%=t :'.title' %></title>
  <%= stylesheet_link_tag 'application' %>
	<%= favicon_link_tag "favicon.png" %>
</head>
<body>
  <%= render "shared/header" %>
  <section>
    <article>
      <%= yield %>
    </article>
    <aside>
      <% if @projects.size > 0 %>
        <section>
          <h3><%=t :".current_projects", :count => @projects.size  %></h3>
          <ul>
            <% @projects.each do |project| %>
            <li>
                <strong><%= link_to project.name, [project, :sections] %></strong>
            </li>
            <% end %>
          </ul>
        </section>
      <% end %>
    </aside>
  </section>
  <%= render "shared/footer" %>
	<%= sprockets_include_tag %>
</body>
</html>
