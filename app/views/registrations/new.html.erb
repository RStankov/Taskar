<header>
	<%= title 'devise.registrations.new' %>
</header>
<div class="wrap">
	<% form_for @user, :url => registration_path(resource_name), :html => { :class => 'action_form', :multipart => true} do |f| %>
	  <%= render 'shared/error_messages', :target => f.object %>
		
	  <p><%= f.label :email %></p>
	  <p><%= f.text_field :email %></p>

	  <p><%= f.label :password %></p>
	  <p><%= f.password_field :password %></p>

	  <p><%= f.label :password_confirmation %></p>
	  <p><%= f.password_field :password_confirmation %></p>

	  <p><%= f.label :first_name  %></p>
	  <p><%= f.text_field :first_name  %></p>

	  <p><%= f.label :last_name  %></p>
	  <p><%= f.text_field :last_name  %></p>
  
		<% f.fields_for :owned_account, @user.owned_account || Account.new do |account| %>
			<p><%= account.label :name, "Име на фирмата ви" %></p>
			<p><%= account.text_field :name %></p>
		<% end %>
			
	  <p><%= f.label :avatar %></p>
	  <p><%= f.file_field :avatar %></p>
	
		<div class="buttons">
      <%= f.submit t('devise.registrations.register') %>
	  </div>
	<% end %>
</div>
<%= render :partial => "shared/devise_links" %>
