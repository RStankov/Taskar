<% javascript_response do %>
  (function(element){
		element.morph({
			change: function(){
		    element.update(<%= javascript_string_from_partial "form", :task => @task %>);
			},
			after: function(){
				element.highlight();
				element.down("textarea").focus();
			}
		});
  })($("<%= dom_id @task %>") || $("task_content"));
<% end %>