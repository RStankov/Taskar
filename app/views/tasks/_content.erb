<%= content_tag_for(:div, @task, :class => @task.state + " task_tooltip" + (@task.archived ? " archived" : "")) do %>
  <div class="tooltip">
		<div class="arrow"></div>
		<div class="actions">
			<%= link_to t(:edit), [:edit, @task], :class => "edit", "data-remote" => true %>
			<%= link_to t(:delete), @task, :class => "delete", "data-method" => "delete", "data-confirm" => t("tasks.confirm") %>
		</div>
	</div>
	<div class="task_text">
    <%= task_state_checkbox(@task) %>
    <%= task_archive_button(@task) %>
    <%= nl2br auto_link(h(@task.text)) %>
  </div>
  <div class="task_description">
    <%= task_description(@task) %>
  </div>
<% end %>