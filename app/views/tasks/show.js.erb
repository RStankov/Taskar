<%= javascript_response do %>
  (function(){
    var element = $('task_content');
    if (element){
      element.update(<%= javascript_string_from_partial "content" %>);
      $('task_title').update("<%= escape_javascript(task_description(@task)) %>");
    } else {
      element = $('task_<%= @task.id %>');
			element.morph({
				change: function(){
	      	element.replace(<%= javascript_string_from_partial @task %>);
				}
			})
    }
    element.highlight();
  })();
<% end %>

