<% javascript_response do %>
  (function(){
    var element = $('task_content');
    if (element){
      element.update("<%= escape_javascript(render 'content') %>");
    } else {
      element = $('task_<%= @task.id %>');
      element.replace("<%= escape_javascript(render @task) %>");
    }
    element.highlight();
  })();
<% end %>

