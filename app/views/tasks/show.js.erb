<%= javascript_response do %>
  (function(){
    var element = $("task_content");
    if (element){
      element.update().highlight();
      $("task_title").update("<%= escape_javascript(task_description(@task)) %>");
    } else {
			$("<%= dom_id @task %>").transform(<%= javascript_string_from_partial @task %>);
    }
  })();
<% end %>

