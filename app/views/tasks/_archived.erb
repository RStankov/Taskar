<% content_tag_for(:li, task, :class => task.state + (current_user.id == task.responsible_party_id ? ' personal' : '')) do %>
	<div class="tooltip">
		<div class="arrow"></div>
		<div class="actions">
			<%= link_to t(:'tasks.task.comments', :count => task.comments.size), task %>
			<%= link_to t(:delete), task, :class => "delete", "data-remote" => true, "data-method" => "delete", "data-confirm" => t(:'.confirm') %>
		</div>
	</div>
  <%= task_state_checkbox(task) %>
  <p>
    <% if task.responsible_party %><strong><%= task.responsible_party.full_name %></strong><% end %>
    <%=h task.text %>
  </p>
	<%= content_tag :span, t('tasks.task.more'), :class => 'more', 'data-more' => t('tasks.task.more'), 'data-less' => t('tasks.task.less') %>
<% end %>