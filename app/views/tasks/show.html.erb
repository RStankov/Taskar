<div id="task_title">
  <span class="actions">
    <%= link_to t(:edit), [:edit, @task], :class => "edit" %>
    <%= link_to_delete t(:delete), @task, :class => "delete", :confirm => t(:'tasks.task.confirm') %>
  </span>
  <%= task_state_checkbox(@task) %>
  <%= simple_format h(@task.text) %>
  <div>
    <%= task_description(@task) %>
  </div>
</div>
<% if @task.comments.size > 0 %>
<h3><icon name="comments"><%=t :'.comments', :count => @task.comments.size %></h3>
<% end %>
<ul id="comments">
  <%= render @task.comments %>
</ul>
<div id="new_comment">
   <%= render "comments/new_form" %>
</div>