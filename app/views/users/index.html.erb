<header>
	<h1><%=t :'users.title' %></h1>
</header>

<%= link_to t(:'layouts.projects.new_user'), new_user_path %>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= image_tag user.avatar.url %>
      <strong><%= link_to h(user.full_name), user %></strong><br />
      <small><%= user.email %></small>
      <% if user.admin? %>
        <em>(<%=t :'activerecord.attributes.user.admin' %>)</em>
      <% end %>
    </li>
  <% end %>
</ul>
