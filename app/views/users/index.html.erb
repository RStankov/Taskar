<header>
	<h1><%=t :'users.title' %></h1>
	<ul class="actions">
		<%= link_to t(:'layouts.admin.new_user'), new_user_path %>
	</ul>
</header>
<div class="wrap">
	<ul id="users_list">
	  <% @users.each do |user| %>
	    <li>
	      <%= image_tag user.avatar.url %>
				<span>
	      	<strong><%= link_to h(user.full_name), user %></strong><br />
		      <small><%= user.email %></small>
		      <% if user.admin? %>
		        <br />
						<em>(<%=t :'activerecord.attributes.user.admin' %>)</em>
		      <% end %>
				</span>
	    </li>
	  <% end %>
	</ul>
</div>