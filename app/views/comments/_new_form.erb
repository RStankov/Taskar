<% form_for [@task, @comment || Comment.new], :html => {:class => 'action_form', :id => nil, :'data-remote' => true} do |form| %>
  <%= render 'shared/error_messages', :target => form.object %>
  <%= form.label :text, t(:'.title') %>
  <%= form.text_area :text %>
  <div class="buttons">
    <%= form.submit t(:'.submit')%>
  </div>
<% end %>