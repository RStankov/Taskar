<% form_for [@task, @comment || Comment.new], :html => {:class => nil, :id => nil} do |form| %>
  <h3><icon name="comment"><%= form.label :text, t(:'.title') %></h3>
  <%= form.text_area :text %>
  <%= form.submit t(:'.submit')%> | <input type="button" class="preview" value="<%=t :'comments.preview' %>">
<% end %>