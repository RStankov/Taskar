<%= javascript_response do %>
  (function(){
    var content = <%= javascript_string_from_partial @comment %>,
        comment = $("<%= dom_id @comment %>");

    if (comment){
			comment.replaceWithEffect(content);
    } else {
      Taskar.Sections.resetForm($("new_comment"));
      $("comments").show().down("ul").insert({bottom: content});
      $("<%= dom_id @comment %>").hide().slideDown();
      $("comments_count").update("<%= @comment.task.comments.count %>");
    }
  })();
<% end %>