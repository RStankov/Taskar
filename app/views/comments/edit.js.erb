<%= javascript_response do %>
  (function(element){
		element.morph({
			change: function(){
	    	element.update(<%= javascript_string_from_partial "edit_form" %>);
			},
			after: function(){
	    	element.highlight();
		    element.down("textarea").focus();
			}
		});
  })($("<%= dom_id @comment %>"));
<% end %>