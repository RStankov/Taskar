<% javascript_response do %>
  (function(element){
		element.morph({
			change: function(){
	    	element.update("<%= raw escape_javascript(render "edit_form") %>");
			},
			after: function(){
	    	element.highlight();
		    element.down('textarea').focus();
			}
		})
  })($('comment_<%= @comment.id %>'));
<% end %>