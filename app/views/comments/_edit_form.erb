<% form_for @comment, :html => {:class => nil, :id => nil, :'data-remote' => true} do |form| %>
   <%= form.error_messages %>
   <%= form.text_area :text, :cols => nil, :rows => nil %>
   <%= form.submit t(:'.submit') %> | 
   <input type="button" class="preview" value="<%=t :'comments.preview' %>"> |
   <%= link_to t(:'tasks.form.cancel'), @comment, :class => "cancel", "data-remote" => true %>
<% end %>